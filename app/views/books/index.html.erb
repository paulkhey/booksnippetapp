<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Cover</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mybooks.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.cover %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
<br>
<br>
<hr>
<br>


<div style="text-align: center" data-controller="book">
 <h1 data-target="book.output"></h1>
 <p style="font-style:italic">Results for <strong>"<%= @my_search %>..."</strong><br><br></p>
</div>




<form data-controller="search" role="search">
  <div>
      <input data-target="search.input" type="search" placeholder="Search for books..." aria-label="Search for books online">
      <button data-action="search#list">Search</button>
  </div>
</form>
<br>
<br>

<section class="search" id="search">
    <div class="search__result">
    <img class="search__image" src="" alt="">
    <div class="search__info">
      <p class="search__title"><p>
      <p class="search__author"></p>
    </div>
  </div>
</section>


