<p id="notice"><%= notice %></p>
<section class="books">
  <% if @mybooks.count > 0 %>
    <p class="total-books">You have a total of <%= @mybooks.count %> <%= @mybooks.count > 1 ? 'books' : 'book' %>.</p>
  <% end %>
  <ul style="padding: 0">
  <% @mybooks.each do |book| %>
    <li class="books__unit">
      <div class="books__detail">
        <img class="books__image" src="<%= book.cover %>" alt="<%= book.title %>">
        <div class="books__info">
          <%= link_to book.title, book, class: 'books__title' %>
          <p class="books__author">by <span style="color: #003bcc; font-weight: bold"><%= book.author %></span></p>
        </div>
      </div>
      <div class="books__action">
        <%= link_to 'Show', book, class: 'primary-btn show replace-pag' %>
        <%= link_to 'Delete', book, class: 'primary-btn delete', method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </li>
  <% end %>
  </ul>
	<% if @mybooks.empty? %>
  <div id="no-books">
		<p>You need to add some books!</p>
		<a href="/search">
      <button class="primary-btn" type="button">Add Books</button>
    </a>
  </div>
	<% end %>
  <%= will_paginate @mybooks %>
</section>




