<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Cover</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mybooks.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.cover %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
<br>
<br>
<hr>


<div style="text-align: center" data-controller="book">
 <h1 data-target="book.output"></h1>
 <p style="font-style:italic"><%= @search_number %> results for <strong>"<%= @my_search %>..."</strong><br><br></p>
</div>

<section class="search">
  <% @books.map do |book| %>
    <% if eval @book_fields_present %>
    <div class="search__result">
      <img class="search__image" src="<%= book.image_link(:zoom => 1, :curl => true) %>" alt="<%= book.title %>">
      <div class="search__info">
        <p class="search__title"><%= truncate(book.title.titleize, :length => 62) %><p>
        <p class="search__author"><%= book.authors %></p>
      </div>
    </div>
    <% end %>
  <% end %>
</section>


