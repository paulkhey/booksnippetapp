<p id="notice"><%= notice %></p>
<section class="book">
  <div class="book__unit">
    <div class="book__detail">
      <p class="book__title"><%= @book.title %></p>
      <p class="book__author">by <span style="color: #003bcc; font-weight: bold"><%= @book.author %></span></p>
    </div>
  </div>  
  
  
<br>
<%= link_to 'Add a new note',  new_book_note_path(@book) %>
<h2>Notes</h2>
<% @mynotes.each do |note| %>
  <p>
    <strong>Title:</strong>
    <%= note.title %>
  </p>
  
  <p>
    <strong>Body:</strong>
    <%= note.body %>
  </p>
  <hr>
  <%= @book.id %>
  <!-- temporay need better solutions -->
  <%= @book_note_path %>
  <a href="<%= './' + @book.id.to_s + '/notes/'+ note.id.to_s  %>">d</a>
<% end %>
  <%= will_paginate @mynotes %>
</section>